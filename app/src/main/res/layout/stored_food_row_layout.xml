<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">

    <ImageView
        android:id="@+id/unstoreButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:src="@drawable/ico_stored"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

    <TextView
        style="@style/FoodRow.Title"
        android:id="@+id/food_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/unstoreButton"
        android:gravity="center_vertical" />

    <LinearLayout
        android:id="@+id/food_details_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/food_title_text"
        android:layout_toLeftOf="@+id/unstoreButton">

        <TextView
            style="@style/FoodRow.Details"
            android:id="@+id/calories_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"/>

        <TextView
            style="@style/FoodRow.Details"
            android:id="@+id/serve_size_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"/>

    </LinearLayout>

    <TextView
        style="@style/FoodRow.Category"
        android:id="@+id/food_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/food_details_main"
        android:layout_toLeftOf="@+id/unstoreButton"/>

</RelativeLayout>